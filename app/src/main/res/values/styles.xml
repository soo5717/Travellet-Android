<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--  Splash theme  -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--  AlertDialog theme  -->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/noto_sans_demilight</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--  TabLayout font  -->
    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/time_plan_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/noto_sans_medium"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/icon_grey"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="12sp"
        android:text="AM 11:00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/place_plan_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/noto_sans_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/four_grey"
        android:lineSpacingExtra="12sp"
        android:text="Lotte Hotel Seoul (롯데 호텔 서울)"
        app:layout_constraintTop_toBottomOf="@id/time_plan_item"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/budget_plan_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/noto_sans_regular"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/icon_grey"
        android:letterSpacing="0.03"
        android:text="Budget &#65510;10,000"
        app:layout_constraintTop_toBottomOf="@id/place_plan_item"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/expense_plan_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/noto_sans_regular"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/icon_grey"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="12sp"
        android:text="Expense &#65510;10,000"
        app:layout_constraintTop_toBottomOf="@id/place_plan_item"
        app:layout_constraintLeft_toRightOf="@id/budget_plan_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>
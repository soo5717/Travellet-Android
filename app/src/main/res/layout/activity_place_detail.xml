<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceDetailActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_margin="16dp"
        android:background="@drawable/backspace_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeButton"
        android:layout_margin="16dp"
        android:background="@drawable/favorite_border_24_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/like" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/placeImage"
                android:background="@color/hint_grey"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/place" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:text="Lotte Hotel Seoul"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/four_grey"
                android:lineSpacingExtra="15sp"
                app:layout_constraintTop_toBottomOf="@+id/placeImage"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:text="# Lodging"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/icon_grey"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overview"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Lotte Hotels and Resorts is a South
Korean luxury hotel chain operated by
Lotte Hotel Co., Ltd., the hospitality arm
of Lotte Corporation. The company was"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/six_grey"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="12sp"
                app:layout_constraintTop_toBottomOf="@+id/category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moreButton"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:text="@string/more"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#459efb"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toBottomOf="@+id/overview"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/hint_grey"
                app:layout_constraintTop_toBottomOf="@+id/moreButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="24dp"
                android:text="@string/contact_info"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/four_grey"
                android:lineSpacingExtra="15sp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="89dp"
                android:layout_marginStart="24dp"
                android:text="@string/tell"
                android:textSize="14sp"
                android:textColor="@color/icon_grey"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="129dp"
                android:layout_marginStart="24dp"
                android:text="@string/address"
                android:textSize="14sp"
                android:textColor="@color/icon_grey"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tellText"
                android:layout_marginTop="89dp"
                android:layout_marginStart="104dp"
                android:text="+82-02-123-1234"
                android:textSize="16sp"
                android:textColor="@color/six_grey"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="12sp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/addrText"
                android:layout_marginTop="129dp"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="24dp"
                android:text="30, Eulji-ro, Jung-gu, Seoul
address address"
                android:textSize="16sp"
                android:textColor="@color/six_grey"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="12sp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/map"
                android:background="@color/hint_grey"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@id/addrText"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/moreInfoButton"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/blue_button_background"
        android:stateListAnimator="@null"
        android:text="@string/more_info"
        android:textColor="@color/white"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
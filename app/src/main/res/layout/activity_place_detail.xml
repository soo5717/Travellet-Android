<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".feature.place.PlaceDetailActivity">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:layout_margin="16dp"
            android:background="@drawable/ic_backspace_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/back" />

    </androidx.appcompat.widget.Toolbar>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeButton"
        android:layout_margin="16dp"
        android:background="@drawable/ic_favorite_border_24dp"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/like" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/placeImage"
                android:background="@color/hint_grey"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/place" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginRight="24dp"
                android:text="Lotte Hotel Seoul"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/four_grey"
                android:fontFamily="@font/noto_sans_regular"
                app:layout_constraintTop_toBottomOf="@+id/placeImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:text="# Lodging"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/icon_grey"
                android:letterSpacing="0.03"
                android:fontFamily="@font/noto_sans_regular"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/noto_sans_light"
                android:letterSpacing="0.03"
                android:text="Lotte Hotels and Resorts"
                android:includeFontPadding="false"
                android:textColor="@color/six_grey"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moreButton"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:text="@string/more"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#459efb"
                android:letterSpacing="0.03"
                android:fontFamily="@font/noto_sans_medium"
                app:layout_constraintTop_toBottomOf="@+id/overview"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/hint_grey"
                app:layout_constraintTop_toBottomOf="@+id/moreButton"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="24dp"
                android:text="@string/contact_info"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/four_grey"
                android:fontFamily="@font/noto_sans_regular"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="89dp"
                android:layout_marginStart="24dp"
                android:text="@string/tell"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textColor="@color/icon_grey"
                android:letterSpacing="0.03"
                android:fontFamily="@font/noto_sans_regular"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="129dp"
                android:layout_marginStart="24dp"
                android:text="@string/address"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textColor="@color/icon_grey"
                android:letterSpacing="0.03"
                android:fontFamily="@font/noto_sans_regular"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tellText"
                android:layout_marginTop="89dp"
                android:layout_marginStart="104dp"
                android:text="+82-02-123-1234"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/six_grey"
                android:letterSpacing="0.03"
                android:fontFamily="@font/noto_sans_light"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/addrText"
                android:layout_marginTop="129dp"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/noto_sans_light"
                android:text="30, Eulji-ro, Jung-gu, Seoul
address address"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/six_grey"
                android:letterSpacing="0.03"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/map"
                android:background="@color/hint_grey"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@id/addrText"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <Button
        android:id="@+id/moreInfoButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_gradation"
        android:fontFamily="@font/noto_sans_medium"
        android:letterSpacing="0.03"
        android:stateListAnimator="@null"
        android:text="@string/more_info"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
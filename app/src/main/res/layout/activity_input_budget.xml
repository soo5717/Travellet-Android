<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".feature.detail.budget.InputBudgetActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/const1"
        android:background="#1aa8b6c8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.Toolbar
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButton"
                android:layout_margin="16dp"
                android:background="@drawable/ic_backspace_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/back" />

        </androidx.appcompat.widget.Toolbar>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeButton"
            android:layout_margin="16dp"
            android:background="@drawable/ic_more_horiz_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/krw"
            android:layout_marginTop="36dp"
            android:layout_marginStart="24dp"
            android:text="@string/krw"
            android:includeFontPadding="false"
            android:textSize="28sp"
            android:textColor="#323643"
            android:fontFamily="@font/rubik_medium"
            android:lineSpacingExtra="0sp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/krw_price"
            android:layout_marginTop="36dp"
            android:layout_marginStart="8dp"
            android:text="@string/_0"
            android:includeFontPadding="false"
            android:textSize="28sp"
            android:textColor="#323643"
            android:fontFamily="@font/rubik_medium"
            android:lineSpacingExtra="0sp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toRightOf="@id/krw"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unit"
            android:layout_marginTop="4dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="40dp"
            android:text="@string/usd"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3sp"
            android:fontFamily="@font/rubik_regular"
            app:layout_constraintTop_toBottomOf="@+id/krw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unit_price"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp"
            android:text="@string/_0"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3sp"
            android:fontFamily="@font/rubik_regular"
            app:layout_constraintTop_toBottomOf="@+id/krw"
            app:layout_constraintLeft_toRightOf="@id/unit"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memo"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="16sp"
        android:textColorHint="@color/hint_grey"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="8sp"
        android:backgroundTint="@color/hint_grey"
        android:hint="@string/memo"
        android:includeFontPadding="false"
        android:background="@drawable/bg_underline_vaild_success"
        android:fontFamily="@font/noto_sans_demilight"
        app:layout_constraintTop_toBottomOf="@+id/const1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:autofillHints=""
        android:inputType="text" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_marginTop="24dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/memo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:id="@+id/btn_lodgging"
                android:background="@drawable/ic_input_lodging_48dp"
                android:contentDescription="@string/lodging" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:id="@+id/btn_food"
                android:background="@drawable/ic_input_food_48dp"
                android:contentDescription="@string/food" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:id="@+id/btn_shopping"
                android:background="@drawable/ic_input_shopping_48dp"
                android:contentDescription="@string/food"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:id="@+id/btn_tourism"
                android:background="@drawable/ic_input_tourism_48dp"
                android:contentDescription="@string/food"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:id="@+id/btn_etc"
                android:background="@drawable/ic_input_etc_48dp"
                android:contentDescription="@string/food"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_transport"
                android:background="@drawable/ic_input_transport_48dp"
                android:contentDescription="@string/food"/>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line"
        android:background="@color/hint_grey"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_1"
            android:background="@android:color/white"
            android:text="@string/_1"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintRight_toLeftOf="@+id/btn_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_2"
            android:background="@android:color/white"
            android:text="@string/_2"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_3"
            android:background="@android:color/white"
            android:text="@string/_3"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_4"
            android:background="@android:color/white"
            android:text="@string/_4"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintRight_toLeftOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_5"
            android:background="@android:color/white"
            android:text="@string/_5"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_1"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_6"
            android:background="@android:color/white"
            android:text="@string/_6"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_7"
            android:background="@android:color/white"
            android:text="@string/_7"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintRight_toLeftOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_8"
            android:background="@android:color/white"
            android:text="@string/_8"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_4"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_9"
            android:background="@android:color/white"
            android:text="@string/_9"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_dot"
            android:background="@android:color/white"
            android:text="@string/dot"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintRight_toLeftOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_0"
            android:background="@android:color/white"
            android:text="@string/_0"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/six_grey"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/noto_sans_regular"
            app:layout_constraintWidth_percent="0.3333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_7"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_del"
            android:background="@android:color/white"
            app:layout_constraintWidth_percent="0.333333"
            app:layout_constraintLeft_toRightOf="@+id/btn_0"
            app:layout_constraintTop_toBottomOf="@+id/btn_7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_input_remove_24dp"
                app:layout_constraintWidth_percent="0.333333"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:contentDescription="@string/del" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_gradation"
        android:fontFamily="@font/noto_sans_medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="6sp"
        android:stateListAnimator="@null"
        android:text="@string/add"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
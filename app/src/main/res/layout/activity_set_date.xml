<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetDateActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_margin="16dp"
        android:background="@drawable/backspace_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/setdate_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/progress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="76dp"
        android:layout_marginStart="24dp"
        android:text="@string/when"
        android:textSize="28sp"
        android:textColor="@color/light_blue"
        android:lineSpacingExtra="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:text="@string/do_you_travel"
        android:textSize="16sp"
        android:textColor="@color/six_grey"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="3sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <Button
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:id="@+id/nextButton"
        android:layout_marginBottom="24dp"
        android:background="@drawable/blue_button_background"
        android:stateListAnimator="@null"
        android:text="@string/next"
        android:textColor="@color/white"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>